    <script>
        function enviarWhatsApp(budin) {
            var numero = '2477683326'; // Reemplaza con tu número de WhatsApp en formato internacional sin el signo "+"
            var mensaje = `Hola, me gustaría pedir un ${budin}.`;
            var url = `https://wa.me/${numero}?text=${encodeURIComponent(mensaje)}`;
            window.open(url, '_blank');
        }
    </script>
